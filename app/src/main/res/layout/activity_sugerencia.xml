<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SugerenciaActivity"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_gravity="center">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_sugerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:minLines="3"
        android:maxLines="15">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_sugerencia"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:minLines="3"
            android:maxLines="15"
            android:hint="Ingresa aqui tu sugerencia" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/txt_enviar"
        app:layout_constraintTop_toBottomOf="@+id/til_contrasena"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/txt_regresar"
        app:layout_constraintTop_toBottomOf="@+id/til_contrasena"
        tools:layout_editor_absoluteX="0dp" />


</LinearLayout>